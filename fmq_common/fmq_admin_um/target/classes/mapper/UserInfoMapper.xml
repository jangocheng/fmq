<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fmq.common.dao.UserInfoDao">
	<resultMap id="BaseResultMap" type="com.fmq.common.dto.UserDTO">
		<result column="id" property="id" />
		<result column="userName" property="userName" />
		<result column="passWord" property="passWord" />
		<result column="create_date" property="createDate" />
	</resultMap>

	<parameterMap id="UserInfo" type="com.fmq.common.dto.UserDTO" />

	<sql id="Base_Column_List">
		id, userName, passWord,create_date
	</sql>

	<select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from UserInfo
		where userName = #{userName}
	</select>

	<insert id="saveUser" parameterType="com.fmq.common.dto.UserDTO">
		insert into UserInfo (userName, userName,create_date)
		values (userName=#{userName,jdbcType=VARCHAR},
		passWord=#{passWord,jdbcType=VARCHAR},create_date=#{createDate,jdbcType=DATE})
	</insert>

	<update id="updateUser" parameterType="com.fmq.common.dto.UserDTO">
		update UserInfo
		<set>
			<if test="userName != null">
				userName = #{userName,jdbcType=VARCHAR},
			</if>
			<if test="passWord != null">
				passWord = #{passWord,jdbcType=VARCHAR},
			</if>
			<if test="createDate != null">
				create_date = #{createDate,jdbcType=DATE},
			</if>
		</set>
		where id = #{id,jdbcType=VARCHAR}
	</update>

	<delete id="deleteUser" parameterType="java.lang.String">
		delete from UserInfo
		where id = #{id}
	</delete>


</mapper>
